extends ../layouts/main

block content
  h1.title Hibajegyek
  a.button.is-link(href="tickets/new") Új hibajegy felvétele
  .cards.tickets
    each ticket in tickets
      .card.ticket(id=`ticket-${ticket.id}`)
        .card-content
          .media
            .media-content
              p.title.is-4 Szint: #{ticket.roomNumber}
              p.subtitle.is-6 ##{ticket.id}
          .content
            p=ticket.description
            time= format(ticket.createdAt, DATE_FORMAT)
          if admin
            button.button.is-danger(type="button", onclick=`deleteTicket(${ticket.id})`) Törlés
    else
      p Nincsenek hibajegyek

block scripts
  script(src='/js/ticket.js')
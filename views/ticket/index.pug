extends ../layouts/main

block content
  .columns.is-mobile.is-multiline.is-vcentered
    .column.is-narrow
      h1.title.is-1 Hibajegyek
    .column.is-narrow
      a.button.is-link(href="tickets/new") Ãšj hibajegy
  .cards.tickets
    each ticket in tickets
      .card.ticket(id=`ticket-${ticket.id}`)
        header.card-header.is-shadowless
          .card-header-title
            .level
              p.title Szint: #{ticket.roomNumber}
              p.subtitle ##{ticket.id}
          if admin
            a.card-header-icon(type="button", onclick=`deleteTicket(${ticket.id})`)
              span.icon.is-medium.has-text-danger
                i.fas.fa-lg.fa-trash-alt
        .card-content
          .content !{ticket.description}
        .card-footer
          .card-footer-item
            span.icon
              i.fas.fa-paper-plane
            time= format(ticket.createdAt, DATE_FORMAT)
            
    else
      p Nincsenek hibajegyek

block scripts
  script(src='/js/ticket.js')
